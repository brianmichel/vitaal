<div id="login_form">
	
<% form_for @user_session do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.label :username %><br />
		<%= f.text_field :username, :class =>"text_field" %>
	</p>
	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password, :class =>"text_field" %>
	</p>
	<p class="submit"><%= f.submit "", :class => "submit"%></p>
	
<% end %>

</div>