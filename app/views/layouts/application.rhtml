<html>
	<head>
		<%= javascript_include_tag ['jquery-1.3.2', 'application'], :cache => true %>
		<%= javascript_include_tag ['effects.core'], :cache => true %>
		<%= javascript_include_tag ['effects.slide'], :cache => true %>
		<%= javascript_include_tag :defaults, :cache => true %>
		<%= stylesheet_link_tag 'stylesheet' %>
	</head>
	<body>
		<% if current_user.nil?%>
			<script type="text/javascript">
				jQuery.noConflict;
				
				jQuery(document).ready(function(){
					jQuery("#login").hide();
				});
			</script>
		<% else %>
			<script type="text/javascript">
				jQuery.noConflict;
				jQuery(document).ready(function () {
						jQuery("#login").show("slide", { direction: "up"}, 500);
				});
			</script>
		<% end %>
	<div id="site">
		<div id="container">
			<div id="left_nav">
				<p>Core Functions Will Go Here</p>
			</div>
			<div id="headertop"></div>
			<div id="logoheader">
				<%= link_to image_tag("vitaallogo.png"), root_path  %>		
			</div>
			<div id="user_nav">
				<% if current_user%>
					<%= link_to "Logout", logout_path %>
				<% else %>
					<%= link_to "Register", {:controller => 'user', :action => 'new'}%> |
					<%= link_to "Login", login_path %>
				<% end %>
			</div><br />
			<%= yield %>
		</div>
		<div id="login">
			<p><strong>(lorem)</strong></p>
		</div>
	</div>
	</body>
</html>